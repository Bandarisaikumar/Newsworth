        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/price_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="2">
            <!-- Title -->
            <TextView
                android:id="@+id/video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/title_placeholder2"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textColor="#0000EE"
                android:maxLines="1"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/age_in_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="age_in_days"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="#DC553D"
                    android:maxLines="1"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/gps_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gps_location"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/uploaded_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="uploaded_by"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#0000EE"
                    tools:ignore="TextSizeCheck" />

            </LinearLayout>
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/content_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/description_placeholder_text2"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:maxLines="1"
            tools:ignore="TextContrastCheck" />

